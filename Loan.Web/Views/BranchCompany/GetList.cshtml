@model Webdiyer.WebControls.Mvc.PagedList<Loan.Entity.DB.BranchCompany>
@using Webdiyer.WebControls.Mvc;

@{
    ViewBag.Title = "GetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table width="100%">
    <tr>
        <th>
            分公司名称
        </th>
        <th>
            分公司地址
        </th>
        <th>
            分公司邮编
        </th>
        <th>
            状态
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }
</table>
<div>
    <div style="float:left;width:50%">共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.CurrentPageIndex 页</div>
    @Html.Pager(Model, new PagerOptions { ShowPageIndexBox = true, PageIndexParameterName = "id", PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false }, new { style = "float:right" })
</div>
@section Scripts{@{Html.RegisterMvcPagerScriptResource();}}


