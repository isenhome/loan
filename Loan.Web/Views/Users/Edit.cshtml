@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Loan.Web.Models.UsersVModel

<script type="text/javascript">
    $(function () {
        if ("@ViewBag.AlertMessage" != "")
        {
            bootbox.alert("@ViewBag.AlertMessage");
        }
    });
</script>

<div class="tab-content">
    <div class="tab-pane active" id="tab_0">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-reorder"></i>修改用户</div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span>Enter any username and password.</span>
                        </div>
                        @Html.ValidationSummary(false)

                        @Html.HiddenFor(m => m.UserID)

                        <div class="form-group">
                            <label class="col-md-3 control-label">用户名</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.UserName, new
                   {
                       @class = "form-control"
                       ,
                       maxlength = "32"
                       ,
                       placeholder = "用户名"
                   })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">用户类型</label>
                            <div class="col-md-4">
                                <select class="form-control">
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                    <option>Option 4</option>
                                    <option>Option 5</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">所属分公司</label>
                            <div class="col-md-4">
                                <select class="form-control">
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                    <option>Option 4</option>
                                    <option>Option 5</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">员工编号</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.EmployeeNO, new
                   {
                       @class = "form-control"
                       ,
                       maxlength = "32"
                       ,
                       placeholder = "员工编号"
                   })
                                @Html.ValidationMessageFor(m => m.EmployeeNO)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">姓名</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.RealName, new
                   {
                       @class = "form-control"
                       ,
                       maxlength = "8"
                       ,
                       placeholder = "姓名"
                   })
                                @Html.ValidationMessageFor(m => m.RealName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">性别</label>
                            <div class="col-md-4">
                                <div class="radio-list">
                                    <label class="radio-inline">
                                        <input type="radio" name="optionsRadios" id="optionsRadios4" value="option1" checked> 男
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="optionsRadios" id="optionsRadios5" value="option2"> 女
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">手机</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Cellphone, new
                   {
                       @class = "form-control"
                       ,
                       maxlength = "11"
                       ,
                       placeholder = "手机号码"
                   })
                                @Html.ValidationMessageFor(m => m.Cellphone)
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">修改</button>
                        </div>
                    </div>
                }
                <form action="#" class="form-horizontal"></form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>


